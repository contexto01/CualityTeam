---
import Layout from '../layouts/Layout.astro'
import GameCard from '../components/GameCard.astro'
import games from '../data/games.ts'
import Form from '../components/Form.astro'
import type { Game } from '../data/types'
---

<Layout title="Cuality Team">
  <link rel="stylesheet" href="" />
  <div class="flex flex-col lg:flex-row gap-5 px-10 lg:px-0">
    <section class="pt-10">
      <h2 class="text-7xl text-balance font-bold tracking-tighter text-center lg:text-left">
        Bienvenido a nuestra página de <b class="text-primary-color">videojuegos</b>
      </h2>
      <p class="py-5 text-balance text-center lg:text-left">
        Somos una empresa apasionada por los videojuegos. Ofreceremos próximamente una amplia
        variedad de títulos para todas las plataformas.
      </p>
      <h3 class="text-lg font-medium pb-2">Juegos Destacados:</h3>
      {
        Object.values(games).map((game: Game) => (
          <GameCard
            key={game.title}
            imgSrc={game.image}
            title={game.title}
            description={game.description}
            link={game.link}
          />
        ))
      }
    </section>
    <Form />
  </div>
</Layout>
